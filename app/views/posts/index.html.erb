<div class="d-flex justify-content-center flex-column text-center p-4">
  <div class="p-4 bg-white shadow-sm p-3 mb-5 bg-white rounded">
    <%= form_for(@post) do |form| %>
      <%= form.text_field :content, id: :post_content, size: 60, class: 'form-control', placeholder: 'Add New Post' %>
      <%= display_errors(@post) %>
      <%= form.submit 'Publish', class: 'btn btn-block btn-primary mt-2' %>
    <% end %>
  </div>
  <% @timeline_posts.each do |post| %>
    <%= render 'post', post: post %>
  <% end %>
</div>
