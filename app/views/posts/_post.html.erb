<div class="d-flex flex-column bg-white shadow-sm p-3 mb-5 bg-white rounded">
  <div class="p-2 text-left">
    <%= link_to post.user.name, user_path(post.user), class: 'font-weight-bold' %> <br>
    <span class="font-weight-light"><%= post.created_at.strftime("%Y/%m/%d") %></span>
    <p>
      <%= post.content %>
    </p>
  </div>
  <div class="border-top border-bottom py-2">
    <%= like_or_dislike_btn(post) %>
  </div>
  <%= render partial: 'comments/comment', collection: post.comments %>
  <div class="py-3 pl-3 mt-4 mx-4">
    <%= form_for(post.comments.new, url: post_comments_path(post)) do |form| %>
      <%= form.text_field :content, size: 30, id: :comment_content, class: 'bg-light shadow-sm p-3 mb-2 border-0 rounded p-3 w-75', placeholder: 'Add new Comment' %>
      <%= form.submit 'Comment', class: 'btn btn-primary ml-4' %>
    <% end %>
  </div>
</div>
