<li>
  <div class="d-flex justify-content-between bg-light">
    <div class="p-2">
      <%= link_to post.user.name, user_path(post.user), class: 'text-danger font-weight-bold' %>
      <p>
        <%= post.content %>
      </p>
    </div>
    <div>
      <%= post.created_at.strftime("%Y/%m/%d") %> <br>
      <%= like_or_dislike_btn(post) %>
    </div>
  </div>
  <div>
    <%= render partial: 'comments/comment', collection: post.comments %>
    <%= form_for(post.comments.new, url: post_comments_path(post)) do |form| %>
      <%= form.text_field :content, size: 30, id: :comment_content, class: 'p-1 mt-3', placeholder: 'Add new Comment' %>
      <%= form.submit 'Comment', class: 'btn btn-primary' %>
    <% end %>
  </div>
</li>
