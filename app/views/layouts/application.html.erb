<!DOCTYPE html>
<html>
  <head>
    <title>RorSocialScaffold</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body class="bg-light">
    <nav class="navbar bg-primary d-flex justify-content-between align-items-center">
      <div>
        <button onclick="location.href = '../';" class="btn btn-light font-weight-bold" >Stay in touch</button>
        <button onclick="location.href = '../';" class="btn btn-primary font-weight-bold ml-5" >Timeline</button>
        <button onclick="location.href = '../users';" class="btn btn-primary font-weight-bold" >All users</button>
        <button onclick="location.href = '../friendships';" class="btn btn-primary font-weight-bold" >Friendships</button>
      </div>
      <div>
        <% if current_user %>
          <button onclick="location.href = '<%= user_path(current_user) %>';" class="btn btn-primary font-weight-bold" ><%= current_user.name %></button>
          <button onclick="location.href = '<%= destroy_user_session_path %>';" class="btn btn-primary font-weight-bold" >Sign out</button>
        <% else %>
          <button onclick="location.href = '<%= user_session_path %>';" class="btn btn-primary font-weight-bold" >Sign in</button>
        <% end %>
      </div>
    </nav>
    <% if notice.present? %>
      <div class="notice">
        <p> <%= notice %> </p>
      </div>
    <% end %>
    <% if alert.present? %>
      <div class="alert">
        <p> <%= alert %> </p>
      </div>
    <% end %>
    <main class="container">
      <%= yield %>
    </main>
  </body>
</html>
